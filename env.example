# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/hrms_leave_db
# For MongoDB Atlas (cloud), use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hrms_leave_db

# Server Configuration
PORT=3000

# JWT Secret (change this in production)
JWT_SECRET=your-secret-key-here-change-in-production

# Email Configuration - Now Implemented!
# For Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Settings
FROM_EMAIL=HRMS System <noreply@company.com>
HR_EMAIL=leaves@domain.com

# For production email services (SendGrid example)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key

# For AWS SES
# SMTP_HOST=email-smtp.us-east-1.amazonaws.com
# SMTP_PORT=587
# SMTP_USER=your-aws-access-key
# SMTP_PASS=your-aws-secret-key

# For development, leave SMTP settings empty to use Ethereal Email (fake SMTP)
