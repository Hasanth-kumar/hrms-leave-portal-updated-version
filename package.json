{
  "name": "hrms-leave-portal",
  "version": "1.0.0",
  "description": "HRMS Leave Management Portal - Full Stack Application",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "start": "npm run server:start",
    "server:start": "node server/server.js",
    "server:dev": "nodemon server/server.js",
    "client:dev": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "client:preview": "cd client && npm run preview",
    "install:all": "npm install && cd client && npm install",
    "build": "npm run client:build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test-db": "node test-db.js",
    "seed": "node test-db.js",
    "generate-jwt": "node generate-jwt-secret.js",
    "verify-env": "node verify-env.js",
    "setup": "node -e \"require('os').platform() === 'win32' ? require('child_process').execSync('setup-env.bat', {stdio: 'inherit'}) : require('child_process').execSync('bash setup-env.sh', {stdio: 'inherit'})\""
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.5",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
